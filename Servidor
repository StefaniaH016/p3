import java.io.*;
import java.net.*;
import java.util.*;

public class Servidor {
    private static final int PORT = 12345;
    private List<TrabajoDeGrado> trabajosDeGrado;

    public Servidor() {
        this.trabajosDeGrado = crearTrabajosDeGrado();
    }

    private List<TrabajoDeGrado> crearTrabajosDeGrado() {
        List<TrabajoDeGrado> trabajos = new ArrayList<>();

        trabajos.add(new TrabajoDeGrado("2023-06-10", "Sistema de Gestión",
                "Aplicación para gestionar inventarios en empresas",
                Arrays.asList(new Autor("Juan", "Pérez", "123456789", "Ing. Sistemas", "Ingeniero"),
                              new Autor("Ana", "Gómez", "987654321", "Ing. Sistemas", "Ingeniera"))));
        
        // Añadir más trabajos de grado aquí con autores
        
        return trabajos;
    }

    public void iniciar() {
        try (ServerSocket serverSocket = new ServerSocket(PORT)) {
            System.out.println("Servidor iniciado en el puerto " + PORT);

            while (true) {
                Socket socket = serverSocket.accept();
                new Thread(new ManejadorCliente(socket, trabajosDeGrado)).start();
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        new Servidor().iniciar();
    }
}

class ManejadorCliente implements Runnable {
    private Socket socket;
    private List<TrabajoDeGrado> trabajosDeGrado;

    public ManejadorCliente(Socket socket, List<TrabajoDeGrado> trabajosDeGrado) {
        this.socket = socket;
        this.trabajosDeGrado = trabajosDeGrado;
    }

    @Override
    public void run() {
        try (
            ObjectOutputStream out = new ObjectOutputStream(socket.getOutputStream());
            BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()))
        ) {
            out.writeObject(trabajosDeGrado);

            String request;
            while ((request = in.readLine()) != null) {
                int id = Integer.parseInt(request);
                List<Autor> autores = trabajosDeGrado.get(id).getAutores();
                System.out.println("Autores del trabajo seleccionado:");
                autores.forEach(System.out::println);
            }

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
